{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "resolveJsonModule": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/static",
    "**/public",
    "**/build",
    "**/out",
    "**/.next",
    "**/.deprecated",
    "**/__testUtils__",
    "**/webpack.config.js",
    "**/next.config.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.sandbox.ts",
    "**/*.sandbox.tsx"
  ]
}
