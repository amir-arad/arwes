{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@repository/*": ["./*"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/static",
    "**/public",
    "**/build",
    "**/out",
    "**/www",
    "**/.next",
    "**/.deprecated",
    "**/__testUtils__",
    "**/scripts",
    "**/webpack.config.js",
    "**/next.config.js",
    "**/commitlint.config.js",
    "apps/play/**"
  ]
}
