{
  "private": true,
  "engines": {
    "node": "20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "motion": "^10.15.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@nrwl/cli": "15.8.x",
    "@nrwl/tao": "15.8.x",
    "@nrwl/workspace": "15.8.x",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "all-contributors-cli": "^6.24.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-love": "^43.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lerna": "^6.6.2",
    "markdownlint": "^0.28.1",
    "markdownlint-cli": "^0.33.0",
    "npm-dts": "^1.3.12",
    "prettier": "^2.8.8",
    "serve": "^14.2.0",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "5.2",
    "vitest": "^1.4.0",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3"
  },
  "scripts": {
    "postinstall": "husky && lerna bootstrap",
    "format-check": "prettier . --check",
    "format": "prettier . --write",
    "lint": "npm run lint-js && npm run lint-md",
    "lint-js": "eslint .",
    "lint-js-fix": "eslint . --fix",
    "lint-md": "markdownlint .",
    "lint-md-fix": "markdownlint . --fix",
    "test": "vitest",
    "clean": "sh ./scripts/clean.sh",
    "build": "npx cross-env NODE_ENV=production npx nx run-many --target build --all --parallel=8",
    "www": "npm run build && sh ./scripts/www.sh",
    "integration": "npm run build && npm run format-check && npm run lint && npm run test -- --run",
    "release": "npm run integration && lerna publish",
    "contributors-add": "all-contributors add",
    "readme-contributors-generate": "all-contributors generate",
    "readme-community-generate": "node ./scripts/readme-community-generate.js"
  }
}
