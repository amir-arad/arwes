{
  "private": true,
  "engines": {
    "node": "20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@emotion/react": "^11.11.4",
    "@testing-library/react": "^15.0.2",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "all-contributors-cli": "^6.26.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-love": "^43.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.12",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lerna": "^6.6.2",
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.39.0",
    "motion": "^10.17.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serve": "^14.2.1",
    "turbo": "^1.13.2",
    "typescript": "^5.2.2",
    "vitest": "^1.5.0"
  },
  "scripts": {
    "postinstall": "husky && lerna bootstrap",
    "format-check": "prettier . --check",
    "format": "prettier . --write",
    "lint": "npm run lint-js && npm run lint-md",
    "lint-js": "eslint \"./@(packages|apps)/*/src/**/*.ts?(x)\"",
    "lint-js-fix": "eslint \"./@(packages|apps)/*/src/**/*.ts?(x)\" --fix",
    "lint-md": "markdownlint .",
    "lint-md-fix": "markdownlint . --fix",
    "test": "vitest",
    "clean": "sh ./scripts/clean.sh",
    "build": "turbo build",
    "www": "npm run build && sh ./scripts/www.sh",
    "integration": "npm run build && npm run format-check && npm run lint && npm run test -- --run",
    "release": "npm run integration && lerna publish",
    "contributors-add": "all-contributors add",
    "readme-contributors-generate": "all-contributors generate",
    "readme-community-generate": "node ./scripts/readme-community-generate.js"
  }
}
